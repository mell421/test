#!/usr/bin/env bash

if (( $# == 1 ))
then
    grep $1 liste/2016.txt
    grep $1 liste/2017.txt
    grep $1 liste/2018.txt
else
    if (( $# == 2 ))
    then
	grep $1 liste/2016.txt >> $1;
	grep $1 liste/2017.txt >> $1;
	grep $1 liste/2018.txt >> $1;
	grep $2 $1;
	rm $1;
    else
	if (( $# == 3 ))
	then
	    grep $1 liste/2016.txt >> $1;
	    grep $1 liste/2017.txt >> $1;
	    grep $1 liste/2018.txt >> $1;
	    
	    grep $2 $1 > $2;
	    grep $3 $2 
	    rm $1 $2;
	else
	    if (( $# == 4 ))
	    then
		grep $1 liste/2016.txt >> $1;
		grep $1 liste/2017.txt >> $1;
		grep $1 liste/2018.txt >> $1;
		
		grep $2 $1 >> $2;
		grep $3 $2 >> $2;
		grep $4 $2;
		rm $1 $2;
	    else
		if (( $# == 5 ))
		then
		    grep $1 liste/2016.txt >> $1;
		    grep $1 liste/2017.txt >> $1;
		    grep $1 liste/2018.txt >> $1;
		    
		    grep $2 $1 >> $2;
		    grep $3 $2 >> $2;
		    grep $4 $2 >> $2;
		    grep $5 $2;
		    rm $1 $2;
		else
		    if (( $# == 6 ))
		    then
			grep $1 liste/2016.txt >> $1;
			grep $1 liste/2017.txt >> $1;
			grep $1 liste/2018.txt >> $1;
			
			grep $2 $1 >> $2;
			grep $3 $2 >> $2;
			grep $4 $2 >> $2;
			grep $5 $2 >> $2;
			grep $6 $2;
			rm $1 $2;
		    fi;
		fi;
	    fi;
	fi;
    fi;
fi;


# plusieurs motifs 
#motifs=($*)
#for motif in ${motifs[*]}; do grep -w $motif suivi_serie.txt; done
